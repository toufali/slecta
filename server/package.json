{
  "name": "slector-server",
  "version": "2.0.0",
  "engines": {
    "node": ">=20"
  },
  "type": "module",
  "author": "A Toufali",
  "license": "ISC",
  "description": "Slector back-end code, packages, and npm scripts",
  "scripts": {
    "start": "node --env-file=../.env server.js",
    "dev": "nodemon --env-file=../.env server.js",
    "db:make": "../node_modules/knex/bin/cli.js migrate:make --knexfile db/knexfile.js",
    "db:migrate": "../node_modules/knex/bin/cli.js migrate:latest --knexfile db/knexfile.js",
    "db:rollback": "../node_modules/knex/bin/cli.js migrate:rollback --knexfile db/knexfile.js"
  },
  "dependencies": {
    "@koa/router": "^12.0.0",
    "knex": "^2.5.1",
    "koa": "^2.14.2",
    "koa-static": "^5.0.0",
    "pg": "^8.11.3",
    "playwright": "^1.38.0",
    "redis": "^4.6.7"
  },
  "devDependencies": {
    "nodemon": "^3.0.3"
  },
  "nodemonConfig": {
    "watch": [
      "./*",
      "../.env",
      "../scripts/*"
    ],
    "ext": "js,json,env"
  }
}
